{
  "name": "advanced-testing",
  "version": "0.0.1",
  "scripts": {
    "lint:stylelint": "stylelint ./app/components/**/*.scss --fix",
    "lint:eslint": "eslint --format=unix --ext .ts,.tsx,.js,.jsx client/ common/ server/ *.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix",
      "git add"
    ],
    "(client|common|server)/**/*.(ts|tsx)": [
      "eslint --fix --format=unix",
      "git add"
    ],
    "./*.config.js": [
      "eslint --fix --format=unix",
      "git add"
    ]
  },
  "dependencies": {
    "@nestjs/common": "6.10.2",
    "@nestjs/config": "0.5.0",
    "@nestjs/core": "6.10.2",
    "@nestjs/microservices": "6.10.2",
    "@nestjs/platform-express": "6.10.2",
    "@nestjs/testing": "6.10.2",
    "express": "4.16.2",
    "handlebars": "4.1.2",
    "lodash": "4.17.13",
    "moment": "2.22.2",
    "mongodb": "3.6.6",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.2"
  },
  "devDependencies": {
    "@types/express": "4.16.0",
    "@types/handlebars": "4.0.40",
    "@types/mongodb": "3.6.12",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "assets-webpack-plugin": "3.9.5",
    "awesome-typescript-loader": "5.2.1",
    "colors": "1.3.2",
    "eslint": "6.8.0",
    "eslint-plugin-jest": "21.20.2",
    "eslint-plugin-react": "7.10.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "husky": "1.3.1",
    "jest": "26.4.2",
    "lint-staged": "8.1.0",
    "stylelint": "8.3.1",
    "stylelint-order": "1.0.0",
    "stylelint-suitcss": "3.0.0",
    "ts-node-dev": "1.1.6",
    "tsconfig-paths": "3.6.0",
    "typescript": "3.8.3",
    "webpack": "4.16.5",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.14",
    "worker-loader": "3.0.7"
  }
}
