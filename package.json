{
  "name": "advanced-testing",
  "version": "0.0.1",
  "scripts": {
    "start:testsServer": "NODE_PATH=./ PROJECT_ROOT=./ ts-node-dev -P server/tests/tsconfig.json --no-notify --all-deps server/tests/server.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix",
      "git add"
    ],
    "(client|common|server)/**/*.(ts|tsx)": [
      "eslint --fix --format=unix",
      "git add"
    ],
    "./*.config.js": [
      "eslint --fix --format=unix",
      "git add"
    ]
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "colors": "^1.4.0",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongodb": "^3.6.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/microservices": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/testing": "^7.6.15",
    "@types/mongodb": "^3.6.12",
    "eslint": "^7.26.0",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  }
}
